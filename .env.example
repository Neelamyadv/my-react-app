# ========================================
# üîë ZYNTIQ ENVIRONMENT VARIABLES TEMPLATE
# ========================================
# Copy this file to .env.local and fill in your actual API keys
# When going live, replace all placeholder values with real API keys

# ========================================
# üåê BACKEND SERVER CONFIGURATION
# ========================================
VITE_BACKEND_URL=https://your-backend-server.com/api

# ========================================
# üí≥ PAYMENT GATEWAY (RAZORPAY)
# ========================================
# Test keys (for development)
VITE_RAZORPAY_KEY_ID=rzp_test_YOUR_TEST_KEY_ID
VITE_RAZORPAY_KEY_SECRET=YOUR_TEST_KEY_SECRET

# Production keys (for live deployment)
VITE_RAZORPAY_PRODUCTION_KEY_ID=rzp_live_YOUR_LIVE_KEY_ID
VITE_RAZORPAY_PRODUCTION_KEY_SECRET=YOUR_LIVE_KEY_SECRET

# Webhook secret (get from Razorpay dashboard)
VITE_RAZORPAY_WEBHOOK_SECRET=YOUR_WEBHOOK_SECRET

# ========================================
# üóÑÔ∏è DATABASE (SUPABASE)
# ========================================
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key
VITE_SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ========================================
# üìß EMAIL SERVICE (SENDGRID/RESEND)
# ========================================
# SendGrid configuration
VITE_SENDGRID_API_KEY=YOUR_SENDGRID_API_KEY
VITE_SENDGRID_FROM_EMAIL=noreply@zyntiq.in
VITE_SENDGRID_FROM_NAME=Zyntiq Team

# Resend configuration (alternative)
VITE_RESEND_API_KEY=YOUR_RESEND_API_KEY
VITE_RESEND_FROM_EMAIL=noreply@zyntiq.in

# ========================================
# üì± SMS SERVICE (TWILIO/MSG91)
# ========================================
# Twilio configuration
VITE_TWILIO_ACCOUNT_SID=YOUR_TWILIO_ACCOUNT_SID
VITE_TWILIO_AUTH_TOKEN=YOUR_TWILIO_AUTH_TOKEN
VITE_TWILIO_PHONE_NUMBER=+1234567890

# MSG91 configuration (India)
VITE_MSG91_API_KEY=YOUR_MSG91_API_KEY
VITE_MSG91_TEMPLATE_ID=YOUR_TEMPLATE_ID
VITE_MSG91_SENDER_ID=ZYNTIQ

# ========================================
# üîê AUTHENTICATION (GOOGLE OAUTH)
# ========================================
VITE_GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID
VITE_GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET
VITE_GOOGLE_REDIRECT_URI=http://localhost:3001/auth/google/callback

# ========================================
# üìä ANALYTICS (GOOGLE ANALYTICS)
# ========================================
VITE_GA_MEASUREMENT_ID=G-YOUR_GA_ID
VITE_GA_TRACKING_ID=UA-YOUR_UA_ID
VITE_FACEBOOK_PIXEL_ID=YOUR_PIXEL_ID
