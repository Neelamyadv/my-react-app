# ========================================
# ‚òÅÔ∏è CLOUD STORAGE (AWS S3/CLOUDFLARE)
# ========================================
# AWS S3 configuration
VITE_AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
VITE_AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
VITE_AWS_REGION=ap-south-1
VITE_AWS_S3_BUCKET=your-zyntiq-bucket

# Cloudflare R2 (alternative)
VITE_CLOUDFLARE_ACCOUNT_ID=YOUR_ACCOUNT_ID
VITE_CLOUDFLARE_ACCESS_KEY_ID=YOUR_ACCESS_KEY
VITE_CLOUDFLARE_SECRET_ACCESS_KEY=YOUR_SECRET_KEY
VITE_CLOUDFLARE_BUCKET_NAME=your-bucket-name

# CDN URLs
VITE_CDN_URL=https://your-cdn.com
VITE_IMAGE_CDN_URL=https://images.your-cdn.com
VITE_VIDEO_CDN_URL=https://videos.your-cdn.com

# ========================================
# üé• VIDEO STREAMING (VIMEO/YOUTUBE)
# ========================================
VITE_VIMEO_CLIENT_ID=YOUR_VIMEO_CLIENT_ID
VITE_VIMEO_CLIENT_SECRET=YOUR_VIMEO_CLIENT_SECRET
VITE_VIMEO_ACCESS_TOKEN=YOUR_VIMEO_ACCESS_TOKEN
VITE_YOUTUBE_API_KEY=YOUR_YOUTUBE_API_KEY
VITE_YOUTUBE_CHANNEL_ID=YOUR_CHANNEL_ID

# ========================================
# üí¨ CHAT SUPPORT (INTERCOM/CRISP)
# ========================================
VITE_INTERCOM_APP_ID=YOUR_INTERCOM_APP_ID
VITE_CRISP_WEBSITE_ID=YOUR_CRISP_WEBSITE_ID
VITE_WHATSAPP_API_TOKEN=YOUR_WHATSAPP_TOKEN
VITE_WHATSAPP_PHONE_NUMBER_ID=YOUR_PHONE_NUMBER_ID

# ========================================
# üîç SEO & MONITORING
# ========================================
VITE_SENTRY_DSN=YOUR_SENTRY_DSN
VITE_LOGROCKET_APP_ID=YOUR_LOGROCKET_APP_ID
