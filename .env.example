# ========================================
# üîß FEATURE FLAGS
# ========================================
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_CHAT=true
VITE_ENABLE_SMS=true
VITE_ENABLE_EMAIL=true
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info

# ========================================
# üìã CONTENT DELIVERY
# ========================================
VITE_CONTENT_CDN_URL=https://your-cdn.com
VITE_CONTENT_API_KEY=YOUR_CONTENT_API_KEY